<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Button.Normal" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Widget.Button.Inverse" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/brown_700</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Widget.Dropdown.Normal" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconTint">@color/brown_700</item>
        <item name="endIconDrawable">@drawable/ic_down</item>
        <item name="android:textColorHint">@color/brown_700</item>
    </style>

    <style name="Widget.TextField.Normal" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/brown_700</item>
        <item name="boxStrokeColor">@color/brown_300</item>
    </style>

</resources>